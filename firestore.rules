rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para configuración pública: CUALQUIERA puede leer, NADIE puede escribir.
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Regla para todo lo demás: Solo usuarios autenticados pueden leer/escribir.
    // Una petición a una ruta no-pública no coincidirá con la regla de arriba y caerá aquí.
    match /{path=**}/{document} {
      allow read, write: if request.auth != null;
    }
  }
}